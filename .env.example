# =============================================================================
# IFC MCP Server Environment Configuration
# =============================================================================
# Copy this file to .env and customize values

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://ifc_user:changeme@localhost:5432/ifc_db
DB_PASSWORD=changeme
DB_PORT=5432

# Pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# =============================================================================
# Application
# =============================================================================
APP_NAME=ifc_mcp
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# IFC Import
# =============================================================================
IFC_IMPORT_BATCH_SIZE=500
IFC_MAX_FILE_SIZE_MB=500
IFC_UPLOAD_DIR=/tmp/ifc_uploads

# =============================================================================
# Pagination
# =============================================================================
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=console

# =============================================================================
# Docker
# =============================================================================
IFC_DATA_DIR=./data
ADMINER_PORT=8080
